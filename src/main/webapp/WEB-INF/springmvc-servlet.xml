	<mvc:interceptors>
	    <mvc:interceptor>
	        <mvc:mapping path="/**"/>
			<bean class="com.play.base.interceptor.SecurityInterceptor">
				<property name="excludedUrls">
	                <list>
						<value>/user/info.go</value>
	                </list>
	            </property>
	        </bean>
	    </mvc:interceptor>
	</mvc:interceptors>
</beans>